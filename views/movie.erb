<!DOCTYPE html>
<html>
<body>
	
	<h2><%= @Movies.title %></h2>
	<img src="<%= @Movies.poster %>" style="width:20%; height:auto;">
	<ul style="display:inline-block;vertical-align:top;">
	  <li><%= @Movies.director %></li>
	  <li><%= @Movies.release %></li>
	  <li><%= @Movies.genre %></li>
	</ul>
	
<br>
	<h2>Reviews</h2>
	<% if @Reviews %>
	  <% @Reviews.each do |review| %>
		<div style="white-space: nowrap;">
			<h4 id="username" style="display:inline-block; vertical-align:top; margin-top:21px; padding:5px; background-color: rgba(255, 255, 255, 0.3);"><%= review.user %></h4>
			<p id="comment" style="display:inline-block; margin-top:21px; padding:5px; white-space: normal; width: 95%; background-color: rgba(255, 255, 255, 0.3);"><%= review.content %></p>
		</div>
	  <% end %>
	<% end %>
	</body>
</html>
