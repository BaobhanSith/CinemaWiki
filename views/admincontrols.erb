<div class="table-wrapper">
  <div class="table-title">
    <h2>Admin Controls Table</h2>
  </div>   
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><b>Username</b></th>
        <th><b>Date Joined</b></th>
        <th><b>Can Edit?</b></th>
        <th><b>Delete</b></th>
      </tr>
    </thead>
    <tbody>
      <% @list2.each do |liste| %>
        <tr>
          <td><%= liste.username %></td>
          <td><%= liste.created_at %></td>
          <form action="/user/<%= liste.username %>" method="post" id="edit">
            <input type="hidden" name="_method" value="put">
            <% if liste.username != "admin" %>
              <td>
                <input type="checkbox" name="edit" <%= "checked" if liste.edit %>>
                <input type="submit" value="Allow Edit?">
              </td>
            </form>      
            <td>
              <a href="/user/delete/<%= liste.username %>">Delete User?</a>
            </td>      
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div><br><br>

<a href="/backup"><button>Backup</button></a>
<a href="/restore"><button>Restore</button></a>
